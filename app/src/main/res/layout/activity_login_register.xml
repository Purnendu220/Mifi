<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mifi.pm.com.exampleproject.LoginRegister"
    android:background="@color/separater_gry_light1"

    >
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/frame_layout"
        android:background="@color/error_red"

        >
        <TextView
            android:id="@+id/title_bar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/title_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="7dp"
            android:text="Register with MIFI"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24sp" />


    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextfirst"
            android:layout_margin="@dimen/margin_10"
            android:hint="First Name"
            android:background="@drawable/bg_edit"
            android:padding="@dimen/margin_15"
            android:layout_gravity="center_horizontal" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextlast"
            android:layout_margin="@dimen/margin_10"
            android:hint="Last Name"
            android:background="@drawable/bg_edit"
            android:padding="@dimen/margin_15"
            android:layout_gravity="center_horizontal" />
        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextUser"
        android:layout_margin="@dimen/margin_10"
        android:hint="UserName"
        android:background="@drawable/bg_edit"
        android:padding="@dimen/margin_15"
        android:layout_gravity="center_horizontal" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextnum"
            android:layout_margin="@dimen/margin_10"
            android:hint="Mobile"
            android:background="@drawable/bg_edit"
            android:padding="@dimen/margin_15"
            android:layout_gravity="center_horizontal" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextemail"
            android:layout_margin="@dimen/margin_10"
            android:hint="Email"
            android:background="@drawable/bg_edit"
            android:padding="@dimen/margin_15"
            android:layout_gravity="center_horizontal" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin_10"
            android:visibility="gone"
            >
            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText5"
                android:hint="Birth Date"
                android:background="@drawable/bg_edit"
                android:drawableRight="@drawable/calendar2"
                android:padding="14dp"
                android:layout_gravity="center_horizontal" />
            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText6"
                android:layout_marginLeft="@dimen/margin_40"
                android:hint="Gender"
                android:background="@drawable/bg_edit"
                android:drawableRight="@drawable/arrow1"
                android:padding="@dimen/margin_15"
                android:layout_gravity="center_horizontal" />


        </LinearLayout>

        <Button
            android:id="@+id/button_reg_now"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_48"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_20"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:inputType="text"
            android:textStyle="bold"
            android:padding="@dimen/margin_10"
            android:text="Register"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18" />
    </LinearLayout>


</RelativeLayout>
